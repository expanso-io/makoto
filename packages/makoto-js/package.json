{
  "name": "@makoto/sdk",
  "version": "0.1.0",
  "type": "module",
  "description": "TypeScript SDK for Makoto data integrity attestations",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "schemas"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "generate-types": "node scripts/generate-types.js",
    "prebuild": "npm run generate-types",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "makoto",
    "data-provenance",
    "attestation",
    "in-toto",
    "dbom",
    "data-integrity"
  ],
  "author": "Makoto Project",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/makoto-project/makoto.git",
    "directory": "packages/makoto-js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "json-schema-to-typescript": "^13.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
